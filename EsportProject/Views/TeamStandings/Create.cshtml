@model EsportProject.Models.TeamTurnamentVM

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-controller="TeamStandings" asp-action="NewCreate" method="post">
    <div class="form-horizontal">
        <div class="form-group">
            <label class="col-md-2 control-label">Turnament</label>
            <div class="col-md-10">
                @Html.DropDownList("Turnament", Model.TurnamentList, "Select")
                <span class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">Teams</label>
            <div class="col-md-10">
                @Html.DropDownList("Team", Model.TeamsList, "Select")
                <span class="text-danger"></span>
            </div>
        </div>  
        <div class="form-group ">
            <div class="col-md-12 text-center">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>
