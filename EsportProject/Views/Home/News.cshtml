@model IEnumerable<EsportProject.Models.DBmodels.News>


@{
    ViewData["Title"] = "News Page";
}

<center>
    <h1 id="newsheadline">News</h1>
</center>
@{List<EsportProject.Models.DBmodels.News> modelList = Model as List<EsportProject.Models.DBmodels.News>; }

@for (int i = 0; i < modelList.Count(); i += 2)
{
    <div class="row text-center">
        @for (int j = 0; j < 2; j++)
        {
            <a class="newsLink" asp-action="SpecificNews" asp-route-id="@modelList[j+i].NewsID">
                <div class="col-md-6 newsStyle">
                    <h3>@Html.Raw(modelList[j + i].Title)</h3>
                    <img src="@modelList[j+i].imgURL" alt="NewsIMG" class="img-responsive center-block img-rounded newIMG">
                    <br />
                    <strong>@Html.Raw(modelList[j + i].subtitle)</strong>
                </div>
            </a>
            @if (j + 1 + i >= modelList.Count())
            {
                break;
            }
        }
    </div>
    <hr />

}
