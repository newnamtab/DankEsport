@model EsportProject.Models.DBmodels.News

@{
    Layout = "~/Views/Shared/_Adminlayout.cshtml";
    ViewData["Title"] = "Create News";
}

<h2>Create news</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <div class="col-md-12">
                <h4>Title</h4>
                <input asp-for="Title" class="form-control" />  
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

        </div>

        <div class="form-group">
            <div class="col-md-12">
                <h4>Sub-title</h4>
                <input asp-for="subtitle" class="form-control" />
                <span asp-validation-for="subtitle" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                <h4>Content</h4>
                <textarea asp-for="Content" id="mytextarea" style="height:300px;"></textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-3">
                Upload image:
                <input asp-for="imgURL" class="form-control" type="file" name="pic" accept="image/*">
                <span asp-validation-for="imgURL" class="text-danger"></span>
            </div>
            <div class="col-md-3">
                Pick a date:
                <input type="date" asp-for="CreateDate" class="form-control" />
                <span asp-validation-for="CreateDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">

            <div class="col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
